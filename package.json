{
  "name": "favorites-service",
  "version": "1.0.0",
  "description": "Service to manage customer favorite products",
  "scripts": {
    "start": "node dist/main/index.js",
    "dev": "tsnd --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/index.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.html dist",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "npm test -c jest-unit-config.js",
    "test:coverage": "npm test -- --coverage"
  },
  "author": "Flavio Brusamolin",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/axios": "^0.9.36",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "amqplib": "^0.10.7",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "joi-to-swagger": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "swagger-ui-express": "^5.0.1"
  }
}
